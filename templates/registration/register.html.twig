{% extends 'base.html.twig' %}

{% block title %}3WVKV | Créer un compte{% endblock %}

{% block body %}
<section class="vh-100"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Créer un compte</h2>

              {{ form_start(registrationForm) }}

              <div class="form-outline mb-4">
                {{ form_label(registrationForm.pseudo) }}
                {{ form_widget(registrationForm.pseudo, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example1cg'}}) }}
              </div>

              <div class="form-outline mb-4">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example3cg'}}) }}
              </div>

              <div class="form-outline mb-4">
                {{ form_label(registrationForm.plainPassword.first) }}
                {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example4cg'}}) }}
              </div>

              <div class="form-outline mb-4">
                {{ form_label(registrationForm.plainPassword.second) }}
                {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example5cg'}}) }}
                <div class="error-message">
                    {{ form_errors(registrationForm.plainPassword.second) }}
                </div>
            </div>


              <div class="form-check d-flex justify-content-center mb-5">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input me-2', 'id': 'form2Example3cg'}}) }}
                <label class="form-check-label" for="form2Example3g">
                  J'accepte les <a href="#!" class="text-body"><u>conditions générales d'utilisation</u></a>
                </label>
              </div>

              <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success btn-block btn-lg gradient-custom-4 ">S'enregistrer</button>
              </div>

              <p class="text-center text-muted mt-5 mb-0">Vous avez déjà un compte ? <a href="{{ path('app_login')}}"
                  class="fw-bold text-body"><u>Connectez-vous ici</u></a></p>

              {{ form_end(registrationForm) }}

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


{% endblock %}

